<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - CodeFolio</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/CodeFolio.styles.css" asp-append-version="true"/>
    <!-- External Stylesheets -->
    <!--  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" /> -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
          integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CodeFolio</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-house"></i> Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="About"><i class="fa-solid fa-address-card"></i> About Me</a>
                    </li>
                    <!-- Static Resume: Visible to everyone -->
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Resume" asp-action="Index">
                            <i class="fa-solid fa-file-lines"></i> Resume
                        </a>
                    </li>

                    <!-- Dynamic Resume: Only for logged-in users -->
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Resume" asp-action="Dynamic">
                                <i class="fa-solid fa-file-lines"></i> Resume <span class="badge bg-info text-light">Dynamic</span>
                            </a>
                        </li>
                    }
                    <li class="nav-item">
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="nav-link text-white" asp-controller="Project" asp-action="Index">
                                <i class="fa-solid fa-gear"></i> Manage Projects <span class="badge bg-secondary">Admin</span>
                            </a>
                        }
                        else
                        {
                            <a class="nav-link text-white" asp-controller="Project" asp-action="Index">
                                <i class="fa-solid fa-diagram-project"></i> Projects
                            </a>
                        }
                    </li>
                    <li class="nav-item">
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="nav-link text-white" asp-controller="BlogPost" asp-action="Index">
                                <i class="fa-solid fa-gear"></i>Manage Blog <span class="badge bg-secondary">Admin</span>
                            </a>
                        }
                        else
                        {
                        <a class="nav-link text-white" asp-controller="BlogPost" asp-action="Index">
                            <i class="fa-solid fa-blog"></i> Blog
                        </a>
                        }
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Contact" asp-action="Index"><i class="fa-solid fa-envelope"></i> Contact</a>
                    </li>
                    
                    
                </ul>
                
                <!-- Authentication Links -->
                <ul class="navbar-nav ms-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <span class="nav-link">
                                Hello, @(User.FindFirst("FirstName")?.Value ?? User.Identity.Name)!
                            </span>
                        </li>
                        <li class="nav-item">
                            <span class="nav-link">
                                Role: @string.Join(", ", User.Claims.Where(c => c.Type == System.Security.Claims.ClaimTypes.Role).Select(c => c.Value))
                            </span>
                        </li>
                        
                        @*
                        <span class="nav-link text-white">
                            Roles: 
                            @foreach (var claim in User.Claims)
                            {
                                if (claim.Type == System.Security.Claims.ClaimTypes.Role)
                                {
                                    <text>@claim.Value </text>
                                }
                            }
                        </span>
                        
                        <!-- Add this for full debugging -->
                        <ul class="navbar-nav">
                            @foreach (var claim in User.Claims)
                            {
                                <li class="nav-item">
                                    <span class="nav-link text-dark">Claim: @claim.Type = @claim.Value</span>
                                </li>
                            }
                        </ul>
                        *@
                        
                        <li class="nav-item">
                            <form asp-area="Identity" asp-page="/Account/Logout" method="POST" id="logoutForm">
                                <button type="submit" class="btn btn-link nav-link">Logout</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
                        </li>
                    }
                </ul>
                
            </div>
        </div>
    </nav>
</header>
<main role="main" class="pb-3 mt-5">
    @RenderBody()
</main>
<div class="container">
    <!-- other content if needed -->
</div>


<footer class="border-top footer text-muted">
    <div class="container">
        @* TODO : Make these links actionable *@
        <a asp-controller="Contact" asp-action="Index" class="text-muted">james.c.jones.cs@gmail.com</a> |
        <a href="https://github.com/jamesc-jones" target="_blank" class="text-muted">GitHub</a> |
        Toronto, Ontario | 647-740-4200
        @*  &copy; 2025 - CodeFolio - <a asp-area="" asp-controller="Home" asp-action="About">About Me</a> *@
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
<!-- External Scripts -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>