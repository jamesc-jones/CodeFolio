@model CodeFolio.Models.Project

<!-- Banner Section -->
<div class="hero-banner text-center text-white">
    <img src="~/img/bernd-dittrich-PSB6bGW-r7k-unsplash.jpg"
         alt="Monitor setup"
         class="hero-image" asp-append-version="true" />
    <div class="hero-text">
        <h1 class="display-3 fw-bold">Delete Project</h1>
    </div>
</div>

<!-- Photographer Credit -->
<div class="text-end small mt-2 me-3">
    Photo by <a href="https://unsplash.com/@@radowanrehan" target="_blank">Radowan Nakif Rehan</a> on
    <a href="https://unsplash.com/photos/black-flat-screen-computer-monitor-cYyqhdbJ9TI" target="_blank">Unsplash</a>
</div>

<div class="container mt-4 pt-4">
    <hr style="border-top: 4px solid #708090;" />
    <h1 class="text-center">Delete Project</h1>
    <hr style="border-top: 4px solid #708090;" />
    
    <h2 class="text-center mt-2 mb-2 pt-2 pb-2">Are you sure that you want to delete this project?</h2>

    <div class="card mb-4">
        <div class="card-body">
            <p>Are you sure that you want to delete this project?</p>
            <h5 class="card-title">@Model.ProjectTitle</h5>

            <!-- New line: Display course name -->
            <p class="card-subtitle text-muted mb-2"><strong>Course:</strong> @Model.ProjectCourse</p>

            <p class="card-text">@Model.ProjectDescription</p>
            <p class="card-text"><small class="text-muted">@Model.ProjectDate.ToLocalTime().ToString("f")</small></p>
            <p>
                <a href="@Model.YouTubeLink" target="_blank" class="btn btn-primary">View on GitHub</a>
            </p>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ProjectId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>