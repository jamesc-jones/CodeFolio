<div class="container mt-4 pt-4">
<hr style="border-top: 4px solid #708090;" />
@{
    ViewBag.Title = "Thank You!";
    Layout = "_Layout";
    
     // Parse TempData string back to DateTime, if available
     DateTime? sentAt = null;
     string senderName = TempData["SenderName"] as string;
     
     if (TempData["SentAt"] != null)
     {
         sentAt = DateTime.Parse(TempData["SentAt"].ToString()).ToLocalTime();
     }
}
<h1 class="text-center">@ViewData["Title"]</h1>
<hr style="border-top: 4px solid #708090;" />


<h2>Thank you for your message!</h2>

@if (!string.IsNullOrEmpty(senderName))
{
    <p class="text-success">Thanks, <strong>@senderName</strong>!</p>
}

<p>I’ll be in touch soon.</p>

@if (sentAt != null)
{
    <p class="text-success">
        Message received on: <strong>@sentAt?.ToString("f")</strong>
    </p>
}
</div>