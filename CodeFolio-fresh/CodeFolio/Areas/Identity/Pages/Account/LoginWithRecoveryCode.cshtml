@page
@model LoginWithRecoveryCodeModel

<!-- Banner Section -->
<div class="hero-banner text-center text-white">
    <img src="~/img/bernd-dittrich-PSB6bGW-r7k-unsplash.jpg"
         alt="Monitor setup"
         class="hero-image" asp-append-version="true" />

    <!-- Text Overlay -->
    <div class="hero-text">
        <h1 class="display-3 fw-bold">Recovery Code Verification</h1>
    </div>
</div>

<!-- Photographer Credit -->
<div class="text-end small mt-2 me-3">
    Photo by <a href="https://unsplash.com/@@radowanrehan" target="_blank">Radowan Nakif Rehan</a> on
    <a href="https://unsplash.com/photos/black-flat-screen-computer-monitor-cYyqhdbJ9TI" target="_blank">Unsplash</a>
</div>

<div class="container mt-4 pt-4">
    <hr style="border-top: 4px solid #708090;" />
    @{
        ViewData["Title"] = "Recovery code verification";
    }
    <h1 class="text-center">@ViewData["Title"]</h1>
    <hr style="border-top: 4px solid #708090;" />
    

<h1>@ViewData["Title"]</h1>
<hr />
<p>
    You have requested to log in with a recovery code. This login will not be remembered until you provide
    an authenticator app code at log in or disable 2FA and log in again.
</p>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" placeholder="RecoveryCode" />
                <label asp-for="Input.RecoveryCode" class="form-label"></label>
                <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

</div>